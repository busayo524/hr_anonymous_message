<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Anonymous Message User Group -->
        <record id="group_anonymous_message_user" model="res.groups">
            <field name="name">Anonymous Message User</field>
            <field name="comment">User can send anonymous messages to HR</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="hr_anonymous_message_rule_employee" model="ir.rule">
            <field name="name">Employee: Own Anonymous Messages</field>
            <field name="model_id" ref="model_hr_anonymous_message"/>
            <field name="domain_force">[('sender_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_anonymous_message_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- HR Officers can see all messages but NOT sender information -->
        <record id="hr_anonymous_message_rule_hr_user" model="ir.rule">
            <field name="name">HR User: All Anonymous Messages</field>
            <field name="model_id" ref="model_hr_anonymous_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- HR Managers and System Admins can see everything including sender -->
        <record id="hr_anonymous_message_rule_manager" model="ir.rule">
            <field name="name">HR Manager: All Messages with Audit</field>
            <field name="model_id" ref="model_hr_anonymous_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager')), (4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>