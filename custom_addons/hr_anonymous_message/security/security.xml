<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Record Rules -->
        
        <!-- Employees can only see their own messages (using hash  - using inbuilt create_uid) -->
        <record id="hr_anonymous_message_rule_employee" model="ir.rule">
            <field name="name">Employee: Own Messages Only</field>
            <field name="model_id" ref="model_hr_anonymous_message"/>
            <field name="domain_force">[('sender_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- HR Users can see all messages but NO sender info -->
        <record id="hr_anonymous_message_rule_hr_user" model="ir.rule">
            <field name="name">HR User: All Messages (Anonymous)</field>
            <field name="model_id" ref="model_hr_anonymous_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- System Admin can see all messages but STILL NO sender info -->
        <record id="hr_anonymous_message_rule_admin" model="ir.rule">
            <field name="name">Admin: All Messages (Still Anonymous)</field>
            <field name="model_id" ref="model_hr_anonymous_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Audit Log - Read-only for System Admin (emergency/legal access only) -->
        <record id="hr_anonymous_message_audit_rule_admin" model="ir.rule">
            <field name="name">Admin: Audit Logs (Read Only)</field>
            <field name="model_id" ref="model_hr_anonymous_message_audit"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>