<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record id="view_hr_anonymous_message_list" model="ir.ui.view">
            <field name="name">hr.anonymous.message.list</field>
            <field name="model">hr.anonymous.message</field>
            <field name="arch" type="xml">
                <list string="Anonymous Messages">
                    <field name="create_date"/>
                    <field name="category"/>
                    <field name="name"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hr_anonymous_message_form" model="ir.ui.view">
            <field name="name">hr.anonymous.message.form</field>
            <field name="model">hr.anonymous.message</field>
            <field name="arch" type="xml">
                <form string="Anonymous Message">
                    <header>
                        <button name="send_to_hr" string="Send to HR" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_acknowledge" string="Acknowledge" type="object" invisible="state != 'sent'" groups="hr.group_hr_user"/>
                        <button name="action_in_progress" string="In Progress" type="object" invisible="state not in ['sent','acknowledged']" groups="hr.group_hr_user"/>
                        <button name="action_resolve" string="Resolve" type="object" invisible="state != 'in_progress'" groups="hr.group_hr_user"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="category"/>
                                <field name="priority" widget="priority"/>
                            </group>
                            <group>
                                <field name="sender_user_id" groups="hr.group_hr_manager,base.group_system"/>
                                <field name="sender_employee_id" groups="hr.group_hr_manager,base.group_system"/>
                            </group>
                        </group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description" widget="html"/>
                        </group>
                        <notebook groups="hr.group_hr_user">
                            <page string="HR Notes">
                                <field name="hr_notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_hr_anonymous_message" model="ir.actions.act_window">
            <field name="name">Anonymous Messages</field>
            <field name="res_model">hr.anonymous.message</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Standalone Menu (Always Visible) -->
        <menuitem id="menu_anonymous_message_root"
                  name="Anonymous HR"
                  sequence="50"/>

        <menuitem id="menu_anonymous_message_all"
                  name="Messages"
                  parent="menu_anonymous_message_root"
                  action="action_hr_anonymous_message"
                  sequence="10"/>

    </data>
</odoo>